{
  "compileOnSave": false,
  "include": ["projects/**/*"],
  "exclude": ["projects/**/*.spec.ts", "demo", "**/schematics/**/*"],
  "compilerOptions": {
    "baseUrl": ".",
    "rootDir": ".",
    "skipLibCheck": true,
    "downlevelIteration": true,
    "outDir": "./dist",
    "sourceMap": true,
    "declaration": false,
    "module": "esnext",
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "resolveJsonModule": true,
    "allowSyntheticDefaultImports": true,
    "importHelpers": true,
    // "strict": true,
    // "noFallthroughCasesInSwitch": true,
    // "noUnusedLocals": true,
    // "noImplicitReturns": true,
    // "noUnusedParameters": true,
    "target": "es2015",
    "typeRoots": ["node_modules/@types"],
    "types": ["jest"],
    "lib": ["es2020", "dom"],
    "paths": {
      "novo-elements": ["projects/novo-elements/index.ts"],
      "novo-elements/button": ["./projects/novo-elements/button/index.ts"],
      "novo-elements/utils": ["projects/novo-elements/utils/index.ts"],
      "novo-examples": ["projects/novo-examples/index"],
      "chomsky": ["projects/chomsky/index"]
    }
  }
}
